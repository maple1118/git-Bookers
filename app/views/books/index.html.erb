<% if flash[:notice] %>
  <div>
    <p class="font-green"><%= flash[:notice] %></p>
  </div>
<% end %>



<h2 class="index-title">Books</h2>

<table class="table">
  <thead>
    <tr>
      <th class="index-title1">Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to 'Show', book_path(book.id) %>
        </td>
        <td>
          <%= link_to 'Edit', edit_book_path(book.id) %>
        </td>
        <td>
          <%= link_to 'Destroy', book_path(book.id),method: :delete,data: { confirm: 'Are you sure' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


<h3 class="index-new">New book</h3>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul><% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %></ul>
<% end %>
<!-- form_with部分 -->
<%= form_with model:@book, url:'/books', local:true do |f| %>


  <div class="index-title2">Title</div>
  <%= f.text_field :title, class: "index-box1" %>
  <div class="index-title3">Body</div>
  <%= f.text_area :body, class: "index-box2" %>
  <div class="index-box3"><%= f.submit 'Create Book' %></div>

<% end %>