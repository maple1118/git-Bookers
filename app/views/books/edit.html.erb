<main class="edit-main">
<h1 class="edit-title">Editing book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul><% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %></ul>
<% end %>

<!-- form_with部分 -->
<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Update Book' %>
<% end %>
<div class="edit-link">
  <span><%= link_to "Show", book_path(@book) %></span>
  <span>|</span>
  <span><%= link_to "Back", books_path %></span>
</div>
</main>